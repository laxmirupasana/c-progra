#include<stdio.h> 
        int main() 
        { 
        	int n, evenSum = 0, oddSum = 0; 
        	printf("Enter the value of 'n': "); 
        	scanf("%d", &n); 
        	for (int i = 1; i <= n; i++) { 
        		if (i % 2 == 0) 
        			evenSum += i; 
        		else
        			oddSum += i; 
        	} 
        	printf("Difference between even sum and odd sum = %d", (evenSum - oddSum)); 
        	return 0; 
        }
